  },
  "devDependencies": {
    "@types/node": "^18.7.16",
    "@types/sass": "^1.43.1",
    "@vitejs/plugin-vue": "^3.1.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.9",
    "typescript": "^4.8.2",
    "vite": "^3.1.0",
    "vite-plugin-dts": "^1.4.1",
    "vitest": "^0.23.1",
    "vue": "^3.2.39",
    "vue-router": "^4.1.5",
    "vue-tsc": "^0.40.13"
  },
  "engines": {
    "node": ">= 16"
  }
