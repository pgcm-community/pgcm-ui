{
  "name": "pgcm-ui",
  "version": "0.0.1",
  "description": "一个 vue3 + ts 书写的组件库，为 pgcm 社区而生",
  "private": true,
  "scripts": {
    "dev": "pnpm -C start dev",
    "docs:dev": "pnpm run -C docs dev",
